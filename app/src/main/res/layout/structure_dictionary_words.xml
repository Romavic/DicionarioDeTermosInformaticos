<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/structure_dictionary_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/structure_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:fontFamily="@font/intro_regular"/>

    <TextView
        android:id="@+id/structure_meaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/structure_dictionary_height"
        android:background="@color/colorPrimary"/>

</LinearLayout>